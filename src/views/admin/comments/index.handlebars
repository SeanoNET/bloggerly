<h1>Comments</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Owner</th>
      <th scope="col">Approve</th>
      <th scope="col">Date</th>
    </tr>
  </thead>
  <tbody>
      {{#each comments}}
        <tr>
            <th>{{id}}</th>
            <td>{{user.firstName}} {{user.lastName}}</td>
            <td><input data-id="{{id}}" type="checkbox" {{#if approvedComment}} checked {{/if}} name="approveComment"></td>
            <td>{{#formatDate dateCreated 'Do MMM YYYY'}} {{/formatDate}}</td>
            <td>
                <form action="/admin/comments/{{id}}?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    {{/each}}
  </tbody>
</table>